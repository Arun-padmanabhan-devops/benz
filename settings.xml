- name: Configure Maven settings.xml for GitHub Packages
  run: |
    mkdir -p ~/.m2
    cat > ~/.m2/settings.xml <<EOF
    <settings>
      <servers>
        <server>
          <id>github</id>
          <username>${{ github.actor }}</username>
          <password>${{ secrets.GH_PACKAGES_TOKEN }}</password>
        </server>
      </servers>
    </settings>
    EOF
